{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es7"],
    "outDir": "bin",
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*.ts"
  ]
}